<Window x:Class="BoardInitialize.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BoardInitialize"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <DockPanel>
            <DataGrid x:Name="ic" AutoGenerateColumns="False">
                <Canvas x:Name="PaintCanvas">
                    <Button Content="{Binding ButtonContent}" Padding="130,130,0,0" Canvas.Left="{Binding X}" Canvas.Top="{Binding Y}" Height="{Binding Height}" Width="{Binding Width}" Name="button"/>
                </Canvas>
            </DataGrid>
        </DockPanel>
    </Grid>
</Window>
