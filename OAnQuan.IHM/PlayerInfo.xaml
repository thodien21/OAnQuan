<Window x:Class="OAnQuan.IHM.PlayerInfo"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:OAnQuan.IHM"
        mc:Ignorable="d"
        Title="Administration" Height="450" Width="800">

    <Grid>
        <ListView Margin="10" Name="icAllPlayerList">
            <ListView.Resources>
                <Style TargetType="{x:Type GridViewColumnHeader}">
                    <Setter Property="HorizontalContentAlignment" Value="Left" />
                </Style>
            </ListView.Resources>
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Classement" Width="70" DisplayMemberBinding="{Binding Ranking}" />
                    <GridViewColumn Header="Pseudo" Width="100" DisplayMemberBinding="{Binding Pseudo}" />
                    <GridViewColumn Header="Nom complet" Width="150" DisplayMemberBinding="{Binding FullName}" />
                    <GridViewColumn Header="Joués" Width="70" DisplayMemberBinding="{Binding TotalGameQty}" />
                </GridView>
            </ListView.View>
        </ListView>
    </Grid>
</Window>
